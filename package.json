{
  "name": "steal-hmr",
  "version": "0.2.1",
  "description": "Hot module replacement (reload) for StealJS/System.js",
  "main": "hmr.js",
  "files": [
    "css.js",
    "hmr.js",
    "app",
    "index.html",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "start": "watchalive",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whitecolor/steal-hmr.git"
  },
  "keywords": [
    "stealjs",
    "systemjs",
    "hmr",
    "hot",
    "reload"
  ],
  "author": "whitecolor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whitecolor/steal-hmr/issues"
  },
  "homepage": "https://github.com/whitecolor/steal-hmr",
  "devDependencies": {
    "steal": "^0.13.2",
    "steal-lp": "^0.1.1",
    "watchalive": "^1.1.2",
    "watchalive-less": "^0.1.0"
  },
  "system": {
    "npmAlgorithm": "flat",
    "transpiler": "babel",
    "babelOptions": {
      "blacklist": []
    },
    "npmIgnore": [
      "watchalive", "watchalive-less"
    ]
  },
  "watchalive": {
    "data": true,
    "plugin": ["less"]
  }
}
